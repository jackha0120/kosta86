<script>
	$(document).ready(function() {
		$('#main ul li a').click(function(idx) {
			$(this).attr("href", "#sub1");
			var imgsrc = $(this).children("img").attr("src");
			var title = $(this).children('h3').text();
			var cont = $(this).children('p').text();
			$('#imgtarget img').attr("src", imgsrc).attr("width", "80px");
			$('#sub1 #cont').chidren("h2").text(title);
			$('#sub1 #cont').chidren("p:eq(1)").text(cont);

			// 			alert($(this).children('h3').text());
			// 			alert($(this).children('p').text());
			// 			alert($(this).children('img').attr('src'));

		});
	});
</script>
